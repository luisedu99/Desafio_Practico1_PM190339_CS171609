<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <TextView
        android:id="@+id/txtViewUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola! Usuario"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163" />

    <Button
        android:id="@+id/btnEjercicio1"
        android:layout_width="141dp"
        android:layout_height="58dp"
        android:text="Ejercicio 1"
        app:layout_constraintBottom_toTopOf="@+id/btnEjercicio2"
        app:layout_constraintEnd_toEndOf="@+id/txtViewUsuario"
        app:layout_constraintStart_toStartOf="@+id/txtViewUsuario"
        app:layout_constraintTop_toBottomOf="@+id/txtViewUsuario"
        app:layout_constraintVertical_bias="0.832" />

    <Button
        android:id="@+id/btnEjercicio2"
        android:layout_width="141dp"
        android:layout_height="58dp"
        android:text="Ejercicio 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnEjercicio1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnEjercicio1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEjercicio3"
        android:layout_width="141dp"
        android:layout_height="58dp"
        android:text="Ejercicio 3"
        app:layout_constraintBottom_toTopOf="@+id/btnSalir"
        app:layout_constraintEnd_toEndOf="@+id/btnEjercicio2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnEjercicio2"
        app:layout_constraintTop_toBottomOf="@+id/btnEjercicio2"
        app:layout_constraintVertical_bias="0.153" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="141dp"
        android:layout_height="58dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="#DA0A0A"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnEjercicio3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnEjercicio3" />
</androidx.constraintlayout.widget.ConstraintLayout>